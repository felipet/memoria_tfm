	issn = {1545-0279},
	journal = {Society},
	keywords = {boundary clock,clock,distributed system,master 
	clock,measurement control system,real time clock,synchronized 
	clock,transparent clock},
	number = {July},
	pages = {c1 --269},
	pmid = {20958093},
	title = {{IEEE Std 1588-2008, IEEE Standard for a Precision Clock 
	Synchronization Protocol for Networked Measurement and Control Systems}},
	volume = {2008},
	year = {2008}
}
